<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="142dp"
    android:gravity="center_vertical"
    android:minHeight="142dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_base"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/v_select"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/ic_setting_group_hub_selected" />.

        <cn.fizzo.hub.school.ui.widget.common.NormalTextView
            android:id="@+id/tv_group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:textColor="@color/tv_secondly"
            android:textSize="34dp" />

        <cn.fizzo.hub.school.ui.widget.common.NormalTextView
            android:id="@+id/tv_group_count"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_secondly"
            android:textSize="34dp" />
    </LinearLayout>
</LinearLayout>