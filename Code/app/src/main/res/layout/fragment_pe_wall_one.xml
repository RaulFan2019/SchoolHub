<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="1258dp"
        android:layout_height="63dp"
        android:background="@drawable/bg_pe_wall_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bpm_avg"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:textColor="#262528"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/tv_pe_name"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:textColor="@color/tv_secondly"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_clazz_name"
            android:layout_width="236dp"
            android:layout_height="55dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="128dp"
            android:gravity="center"
            android:textColor="#5A5662"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/tv_pe_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accent"
            android:textSize="28dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_mover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5.3dp"
        android:layout_weight="1"
        android:focusable="false" />

    <LinearLayout
        android:id="@+id/ll_alert"
        android:layout_width="1252dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/bg_frame_accent_30_radius"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="32.5dp"
            android:layout_height="34.5dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ic_alert" />

        <LinearLayout
            android:id="@+id/ll_alert_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </LinearLayout>

</LinearLayout>