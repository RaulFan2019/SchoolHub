<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="776dp"
    android:layout_height="325dp"
    android:background="@color/primary"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <cn.fizzo.hub.school.ui.widget.common.NormalTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/tv_title"
        android:textSize="32dp" />

    <View
        style="@style/DividerH"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp" />


    <LinearLayout
        android:id="@+id/ll_et"
        android:layout_width="736dp"
        android:layout_height="66dp"
        android:paddingLeft="25dp"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/et"
            android:layout_width="736dp"
            android:layout_height="66dp"
            android:textColor="@color/tv_secondly"
            android:textSize="26dp"
            android:gravity="center_vertical"
            android:background="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/BtnDialog"
            android:layout_marginRight="18dp"
            android:text="取消" />

        <Button
            android:id="@+id/btn_ok"
            style="@style/BtnDialog"
            android:text="确定" />

    </LinearLayout>

</LinearLayout>