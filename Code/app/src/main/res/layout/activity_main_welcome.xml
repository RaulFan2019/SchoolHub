<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_welcome"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="226dp">

        <View
            android:id="@+id/v_anim"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/anim_main_welcome_rotate" />

        <View
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/ic_logo" />

    </FrameLayout>

    <cn.fizzo.hub.school.ui.widget.common.NormalTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="FIZZO心率系统"
        android:textColor="@color/tv_title"
        android:textSize="21dp" />

    <cn.fizzo.hub.school.ui.widget.common.NormalTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="229dp"
        android:text="启动中，请稍等片刻..."
        android:textColor="#7F7F7F"
        android:textSize="20dp" />

</LinearLayout>